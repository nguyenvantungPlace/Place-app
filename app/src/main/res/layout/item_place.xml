<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:layout_margin="@dimen/margin_8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/item_place_avatar"-->
        <!--android:src="@color/hint"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp" />-->
    <!--<TextView-->
        <!--android:id="@+id/item_place_name"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@color/colorBlack"-->
        <!--android:maxLines="1"-->
        <!--android:layout_marginTop="@dimen/margin_8"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    <ImageView
        android:id="@+id/item_place_background"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <com.wonderkiln.blurkit.BlurLayout
        xmlns:blurkit="http://schemas.android.com/apk/res-auto"
        android:id="@+id/comment_blur_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="#26000000"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.wonderkiln.blurkit.BlurLayout>

    <RelativeLayout
        android:id="@+id/item_place_layout"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_place_avatar"
            android:transitionName="shared_image_place"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="167dp"
            tools:layout_editor_absoluteY="230dp"
            android:src="@drawable/logo"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <ImageView
            android:id="@+id/item_place_more"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_img_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_place_name"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:text="sdgs"
            android:transitionName="shared_txt_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_place_avatar"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>